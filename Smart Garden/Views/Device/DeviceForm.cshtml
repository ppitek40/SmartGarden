@using Microsoft.EntityFrameworkCore
@using SmartGarden.Models.Enums
@model SmartGarden.Models.Device
@{
    var action = Model == null || Model.Id == 0 ? "Create" : "Edit";
    ViewBag.Title = action;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@action</h2>

@using (Html.BeginForm(action, "Device"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DeviceType)
        @Html.DropDownListFor(m => m.DeviceType, Html.GetEnumSelectList<EDeviceType>(), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DeviceType)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.IpAddress)
        @Html.TextBoxFor(m => m.IpAddress, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.IpAddress)
    </div>

    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

